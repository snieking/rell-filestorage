operation add_chunk_data (data: byte_array) {
   val hash = data.sha256();
   val chunk = filehub.chunk @ { hash }; // this finds chunk in the hub chain
   require(filehub.chunk.blockchain.rid == op_context.blockchain_rid); // TODO: this won't work now, can be done using module_args instead
   
   // Verify that the same user stores the data, that paid for it
   require(is_signer(filehub.chunk.pubkey));
   
   create mapping(hash, op_context.transaction);
}